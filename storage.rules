rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Permite a leitura pública de fotos de perfil
    match /profile_pictures/{userId} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Regra para imagens de produtos
    match /product_images/{productId} {
      allow read; // Qualquer um pode ler as imagens dos produtos
      allow write: if request.auth != null; // Qualquer usuário autenticado pode escrever (fazer upload)
    }
  }
}